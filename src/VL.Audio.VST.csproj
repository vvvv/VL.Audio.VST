<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0-windows</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <OutputPath>..\lib</OutputPath>
    <PackageRepositories>$([System.IO.Path]::GetFullPath($(MsBuildThisFileDirectory)..\..))</PackageRepositories>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="VST3\MakeGuid.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Include="VST3\MakeGuid.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="VL.Audio" Version="1.8.4" />
    <PackageReference Include="VL.CoreLib" Version="2024.6.6" />
    <PackageReference Include="VL.IO.Midi" Version="1.1.1" />
  </ItemGroup>

</Project>
